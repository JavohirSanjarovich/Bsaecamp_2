<div class="container">
  
  <h1>Posts <%= link_to "New post", new_post_path, style: "text-decoration: none; margin-left: 61%;" %></h1>

<div class="row">
<% @posts.each do |post| %>

<div class="card" style="width: 18rem; margin-left: 10px;">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><i class="bi bi-person-circle"></i> <%= post.user.username %></h6>
    <h6 class="card-subtitle mb-2 text-muted"><i class="bi bi-eye"></i> <%= post.views %></h6>
    
    <p class="card-text"><%= post.body %></p>
    <%= link_to "Show", post, class:"card-link" %>
  </div>
</div>

    <% end %>

</div>






