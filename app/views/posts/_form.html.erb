  <% end %>
<div class="container">
    <div class="box">
    <div class="col">
    <div>
      <%= form.label :title, style: "display: block", class: "form-body" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div>
      <%= form.label :body, style: "display: block", class: "form-body" %>
      <%= form.text_area :body, class: "form-control" %>
    </div>
    <div>
      <%= form.number_field :user_id, value: current_user.id, type: :hidden %>
    </div>

    <div>
      <%= form.submit class: "btn bt1 btn-primary" %>
    </div>
</div>
</div>
</div>
<% end %>
